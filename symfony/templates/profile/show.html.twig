{% extends "base.html.twig" %}

{% block title %}Sooonr - Profil{% endblock %}

{% block body %}
    <div class="container">

        {% if app.user.profile.id is defined %}
            {% if profile.id == app.user.profile.id %}
                <a href="{{ path('profile_edit', {id: profile.id} ) }}" class="btn btn-info">Modifier</a>
            {% endif %}
        {% endif %}

        <h1>{{ profile.pseudo }}</h1>
        <hr/>
        <div class="row">
            <div class="col-lg-2 pull-lg-2 text-xs-center">
                <img src="{{ asset('build/avatars/' ~ profile.image) }}" class="m-x-auto img-fluid img-circle">
            </div>
            <div class="col-md-9">

                <h6>Description</h6>
                <p>
                    {{ profile.about }}
                </p>
                <h6>Profession</h6>
                <p>
                    {{ profile.stageName }}
                </p>
            </div>
        </div>

    </div>

{% endblock %}