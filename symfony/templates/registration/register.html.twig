{% extends 'base.html.twig' %}
{% form_theme registrationForm '@EWZRecaptcha/Form/ewz_recaptcha_widget.html.twig' %}

{% block title %}{{ 'register'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <h1>{{ 'register'|trans }}</h1>

        {{ form_start(registrationForm) }}

        <div class="form-group row">
            {{ form_row(registrationForm.email) }}
        </div>
        <div class="form-group row">
            {{ form_row(registrationForm.plainPassword.first) }}
        </div>
        <div class="form-group row">
            {{ form_row(registrationForm.plainPassword.second) }}
        </div>

        {{ form_widget(registrationForm.recaptcha) }}

        <button class="btn-lg">{{ 'register'|trans }}</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}