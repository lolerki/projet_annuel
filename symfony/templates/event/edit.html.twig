{% extends 'base.html.twig' %}

{% block title %}Event  !{% endblock %}

{% block body %}
    <div class="container">
        {% if is_granted('ROLE_USER') %}
        <h1>Modifier l'événement</h1>

        {{ form(form) }}
        {{ form_widget(form) }}

        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i> {{ 'action.save'|trans }}
        </button>
        {{ form_end(form) }}
        {% endif %}
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

{% endblock %}