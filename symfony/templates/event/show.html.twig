{% extends 'base.html.twig' %}

{% block title %}Event  !{% endblock %}

{% block body %}
    <div class="container">

        <div class="card mb-3">
            <div class="row no-gutters">
                <div class="col-md-4">
                    <img src="" class="card-img">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ event.title }}</h5>
                        <p class="card-text">{{ event.description }}</p>
                        <p class="card-text">
                            {% if participe == null %}
                                <button class="btn btn-info participe" id="{{ event.id }}">Participé à l'événement
                                </button>
                            {% else %}
                                <button class="btn btn-warning " id="{{ event.id }}">Je participe déjà a cette événment
                                </button>
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $('.participe').click(function () {

            var data = $(this).attr('id');

            var url = "{{ path('event_participe', {'id': 'id'}) }}";
            url = url.replace("id", data);

            var formSerialize = $(this).serialize();

            $.post(url, formSerialize, function (response) {

                /* $('#notif p').html(response['message']);
                 $('#notif').fadeIn(500);*/


            }, "JSON");
        });
    </script>
{% endblock %}