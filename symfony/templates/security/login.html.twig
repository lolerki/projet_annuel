{% extends 'base.html.twig' %}

{% block title %}{{ 'menu.login'|trans }}{% endblock %}

{% block body %}
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">

        <div class="row">
            <div class="col-md-6 white card">
                <div class="card-body">
                    <h1 class="h3 mb-3 font-weight-normal">{{ 'please sign in'|trans }}</h1>
                    <form method="post">
                        <label for="inputEmail" class="sr-only">{{ 'label.email'|trans }}</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail"
                               class="form-control"
                               placeholder="{{ 'label.email'|trans }}" required autofocus>
                        <label for="inputPassword" class="sr-only">{{ 'label.password'|trans }}</label>
                        <input type="password" name="password" id="inputPassword" class="form-control"
                               placeholder="{{ 'label.password'|trans }}" required>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" class="filled-in" name="_remember_me">
                                <span>{{ 'remember'|trans }}</span>
                            </label>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <button class="btn-lg btn-success" type="submit">
                                    {{ 'action.sign_in'|trans }}
                                </button>
                            </div>
                            <div class="col-md-6">
                                <div class="center">
                                    <a href="{{ path('connect_facebook_start') }}" title="Facebook"
                                       class="btn btn-facebook btn-lg"><i class="fab fa-facebook-square"></i>
                                        Facebook</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="col-md-6 ">
                <p class="white-text">
                    Vous n'avez pas encore de compte ?
                </p>
                <p class="white-text titlehun">
                    Cr√©er votre compte maintenant !
                </p>
                <a href="{{ path('app_register') }}" class="btn btn-info">{{ 'register'|trans }}</a>
            </div>

        </div>
    </div>
{% endblock %}
