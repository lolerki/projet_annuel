{% block nav %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('app_home') }}">Sooonr</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="container">
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="{{ path('app_home') }}"><i class="fas fa-list"></i> Liste des
                            événements
                            <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="{{ path('event_search') }}"><i class="fas fa-search"></i> Recherche</a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="nav-item"><a href="{{ path('notify') }}" class="nav-link">
                                {% if notif == true %}
                                    <i class="fas fa-bell"></i>
                                {% else %}
                                    <i class="fas fa-exclamation text-danger"></i>
                                {% endif %}
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('create_event') }}"><i class="far fa-calendar-plus"></i>
                                Créer un événement
                                <span class="sr-only">(current)</span></a>
                        </li>

                        <li class="nav-item dropdown ml-aut">
                            <a class="nav-link dropdown-toggle float-right" href="#" id="navbarDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-user-circle"></i> {{ app.user.username }}
                            </a>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                                {% if is_granted('ROLE_ADMIN') %}
                                    <a class="dropdown-item" href="{{ path('easyadmin') }}"><i
                                                class="fas fa-unlock-alt"></i> Administration</a>
                                    <div class="dropdown-divider"></div>
                                {% endif %}
                                <a class="dropdown-item" href="{{ path('dashboard') }}"><i class="fas fa-cog"></i>
                                    Tableau
                                    de bord</a>
                                <a class="dropdown-item" href="{{ path('profile_show') }}"><i
                                            class="far fa-id-badge"></i>
                                    Voir mon profil</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="{{ path('app_logout') }}"><i
                                            class="fas fa-power-off"></i>
                                    Déconnexion</a>
                            </div>
                        </li>

                    {% else %}
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_login') }}"><i
                                        class="fas fa-sign-out-alt"></i> {{ 'menu.login'|trans }}</a>
                        </li>
                        <li class="nav-item"><a class="nav-link" href="{{ path('app_register') }}"><i
                                        class="fas fa-plus"></i> S'inscrire</a>
                        </li>
                    {% endif %}

                </ul>
            </div>
        </div>
    </nav>
{% endblock %}